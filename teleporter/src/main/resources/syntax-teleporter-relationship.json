						"toTable": "FILM",
						"toColumn": ["F_ID"],
						"joinTable": {
							"tableName": "ACTOR2FILM",
							"fromColumn": ["ACTOR_ID"],
							"toColumn": ["FILM_ID"],
							}
						"direction": "direct"
					},
					"properties": {
						"updatedOn": {
							"type": "DATE",
							"value": "$from.date",
							"mandatory": false,
							"readOnly": false,
							"notNull": false
						},
						"author": {
							"type": "string",
							"value": "$to.AUTHOR_NAME"
						}
					}
				}
			}]
}
